ATTORNEY_PERFORMANCE_TRACKING=true

# Contract Intelligence
CONTRACT_RISK_ANALYSIS=true
CLAUSE_EXTRACTION_ENABLED=true
COMPLIANCE_CHECKING=true
RED_FLAG_DETECTION=true
