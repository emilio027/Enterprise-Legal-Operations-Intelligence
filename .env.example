SENTIMENT_ANALYSIS_ENABLED=true
TEXT_CLASSIFICATION_ENABLED=true
ENTITY_LINKING_ENABLED=true

# Machine Learning Configuration
ML_MODEL_PATH=./models/
ML_DATA_PATH=./data/
ML_RETRAIN_INTERVAL=48h
ML_BATCH_SIZE=16
