STATUTE_SEARCH_ENABLED=true
REGULATION_TRACKING=true
PRECEDENT_ANALYSIS=true
CITATION_NETWORK_ANALYSIS=true

# Compliance and Risk
REGULATORY_COMPLIANCE_MONITORING=true
RISK_SCORING_ENABLED=true
AUDIT_TRAIL_ENABLED=true
POLICY_COMPLIANCE_CHECKING=true
CONFLICT_OF_INTEREST_DETECTION=true

