# Application Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8005

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/legal_ops_db
MONGODB_URL=mongodb://localhost:27017/legal_ops_db
REDIS_URL=redis://localhost:6379/0
ELASTICSEARCH_URL=http://localhost:9200

# Legal Data APIs
WESTLAW_API_KEY=your-westlaw-api-key
LEXISNEXIS_API_KEY=your-lexisnexis-api-key
COURTLISTENER_API_KEY=your-courtlistener-api-key
JUSTIA_API_KEY=your-justia-api-key
BLOOMBERG_LAW_API_KEY=your-bloomberg-law-api-key

# Document Processing
OCR_ENGINE=tesseract
PDF_PROCESSING_ENABLED=true
DOCX_PROCESSING_ENABLED=true
CONTRACT_PARSING_ENABLED=true
LEGAL_CITATION_EXTRACTION=true

# Natural Language Processing
